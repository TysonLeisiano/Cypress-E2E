{
  "devDependencies": {
    "cypress": "^13.16.0",
    "cypress-mochawesome-reporter": "^3.8.2"
  },
  "scripts": {
    "test:register": "npx cypress run --spec 'cypress/e2e/tests/registerTest.cy.js'",
    "test:addToCart": "npx cypress run --spec 'cypress/e2e/tests/addToCartTest.cy.js'",
    "cy:run": "cypress run",
    "cy:verify": "cypress verify",
    "cy:cloud": "npx cypress run",
    "test": "cypress run --spec 'cypress/e2e/tests/**/*.cy.js'",
    "test:all": "cypress run --spec 'cypress/e2e/tests/**/*.cy.js' --headed --browser chrome",
    "test:report": "cypress-mochawesome-reporter --reportDir cypress/reports --reportFilename mochawesome-report.html",
    "test:open": "cypress open"
  }
}
